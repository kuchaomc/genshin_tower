[sub_resource type="Shader" id="Shader_1"]
code = "shader_type canvas_item;

uniform vec4 base_color : source_color = vec4(0.16, 0.16, 0.16, 0.85);
uniform float cell_size = 6.0;
uniform float jitter = 0.35;
uniform float levels = 6.0;
uniform float strength = 1.0;

float _hash(vec2 p) {
	return fract(sin(dot(p, vec2(127.1, 311.7))) * 43758.5453123);
}

void fragment() {
	float fade = clamp(1.0 - UV.x, 0.0, 1.0);
	vec2 cell = floor(FRAGCOORD.xy / max(cell_size, 1.0));
	float rnd = _hash(cell);
	float shifted = clamp((fade - rnd * jitter) / max(1.0 - jitter, 0.001), 0.0, 1.0);
	float a = floor(shifted * levels) / max(levels, 1.0);
	COLOR = vec4(base_color.rgb, base_color.a * a * clamp(strength, 0.0, 1.0));
}
"

